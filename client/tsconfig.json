{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "noResolve": false,
        "noEmitOnError": true,
        "allowUnreachableCode": false,
        "downlevelIteration": true,
        "locale": "en-us",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "suppressImplicitAnyIndexErrors": false
        "lib": [
            "es2015.promise"
        ],
        "typeRoots": [
            "typings/globals",
            "typings/modules"
        ]
    }
    "include": [
        "./src/**/*.ts"
    ]
}
