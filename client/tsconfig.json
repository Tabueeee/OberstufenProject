{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "ES3",
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": false,
        "sourceMap": false,
        "pretty": false,
        "noResolve": false,
        "typeRoots": [
            "typings/globals",
            "typings/modules"
        ]
    },
    "include": [
        "./**/*.ts"
    ]
}
